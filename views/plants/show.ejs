<!--views/plants/show.ejs-->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title %>
  </title>
  <%- include('../partials/head') %>
</head>

<body>
  <%- include('../partials/nav') %>
    <div class="container">
      <div class="card">
        <div class="card-content">
          <header>
            <h1 class="center-align">
              <%= plant.name %>
            </h1>
          </header>
          <div class="container row">
            <div class="col s3">
              <img class="responsive-image" src="<%= plant.coverImage %>" alt="<%= plant.name %>"
                style="max-height: 200px;">
            </div>
            <div class="left-align col s9">
              <div class="plant-details">
                <p><strong>Author:</strong>
                  <%= plant.author %>
                </p>
                <p><strong>Published:</strong>
                  <%= plant.published %>
                </p>
                <%- plant.care %>
                  </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="center-align" style="margin-top: 40px;">
      <a href="/plants" class="btn blue darken-1">Return to Plants Page</a>
      <a href="/plants/<%= plant.id %>/edit" class="btn waves-effect light-green lighten-3">Edit Plant</a>
    </div>
</body>

</html>